@model List<taskWebtel.Model.taskModel>

@{
    ViewData["Title"] = "Task List";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f8f9fa;
            color: #343a40;
            margin: 0;
            padding: 20px;
        }

        h1 {
            color: #007bff;
        }

        #taskList {
            list-style-type: none;
            padding: 0;
        }

            #taskList li {
                background-color: #ffffff;
                border: 1px solid #ddd;
                margin-bottom: 10px;
                padding: 10px;
                border-radius: 4px;
            }

        #taskForm {
            margin-top: 20px;
        }

            #taskForm div {
                margin-bottom: 10px;
            }

            #taskForm label {
                display: block;
                margin-bottom: 5px;
                font-weight: bold;
            }

            #taskForm input, #taskForm textarea {
                width: 100%;
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 4px;
                box-sizing: border-box;
            }

            #taskForm button {
                background-color: #007bff;
                color: #ffffff;
                padding: 10px 15px;
                border: none;
                border-radius: 4px;
                cursor: pointer;
            }

                #taskForm button:hover {
                    background-color: #0056b3;
                }
    </style>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
</head>
<body>
    <h1>@ViewData["Title"]</h1>
    <ul id="taskList">
        @foreach (var task in Model)
        {
            <li>
                <strong>@task.Name:</strong> @task.Description
            </li>
        }
    </ul>
    <form id="taskForm">
        <div>
            <label for="name">Name:</label>
            <input type="text" id="name" name="name" required />
        </div>
        <div>
            <label for="description">Description:</label>
            <textarea id="description" name="description" required></textarea>
        </div>
        <button type="submit">Add Task</button>
    </form>
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            // Function to fetch tasks from the API and update the task list
            function fetchTasks() {
                $.ajax({
                    url: '/api/Task/getTask',
                    method: 'GET',
                    success: function (data) {
                        const taskList = $('#taskList');
                        taskList.empty(); // Clear existing tasks
                        data.forEach(task => {
                            const listItem = $('<li>').html(`<strong>${task.name}:</strong> ${task.description}`);
                            taskList.append(listItem);
                        });
                    },
                    error: function (error) {
                        console.error('Error fetching tasks:', error);
                    }
                });
            }

            // Fetch tasks on page load
            fetchTasks();

            // Handle form submission to add a new task
            $('#taskForm').on('submit', function (event) {
                event.preventDefault();
                const name = $('#name').val();
                const description = $('#description').val();

                $.ajax({
                    url: '/api/Task/postTask',
                    method: 'POST',
                    contentType: 'application/json',
                    data: JSON.stringify({ name: name, description: description }),
                    success: function (data) {
                        fetchTasks(); // Refresh the task list after adding a new task
                        $('#taskForm')[0].reset(); // Reset the form
                    },
                    error: function (error) {
                        console.error('Error adding task:', error);
                    }
                });
            });
        });
    </script>
</body>
</html>
